{
    "manifest_version": 2,
    "name": "Youtube Downloader",
    "update_url": "https://myhost.com/mytestextension/updates.xml",
    "description": "It downloads youtube videos.... What more do you want?",
    "version": "1.0",
    "background": {
        "scripts": [
            "bundle.js"
        ]
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "contextMenus"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/page-16.png",
            "32": "icons/page-32.png"
        }
    }
}